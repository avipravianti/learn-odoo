<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="action_course_list" model="ir.actions.act_window">
            <field name="name">List Course</field>
            <field name="res_model">academic.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Course is empty</p>
            </field>
        </record>

        <record id="action_session_list" model="ir.actions.act_window">
            <field name="name">List Session</field>
            <field name="res_model">academic.session</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Session is empty</p>
            </field>
        </record>

        <record id="action_attendee_list" model="ir.actions.act_window">
            <field name="name">List Attendee</field>
            <field name="res_model">academic.attendee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Attendee is empty</p>
            </field>
        </record>

        <record id="action_instructor_list" model="ir.actions.act_window">
            <field name="name">Instructors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_instructor':1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Instructor is empty</p>
            </field>
        </record>

        <menuitem id="academic_0" name="Academic" sequence="20"/>
        <menuitem id="academic_1" name="Academic" sequence="20" parent="academic_0"/>
        <menuitem id="menu_academic_course" name="Course" sequence="20" action="action_course_list" parent="academic_1" />

        <menuitem id="menu_academic_session" name="Session" parent="academic_1" action="action_session_list" sequence="30" />

        <menuitem id="menu_academic_attendee" name="Attendee" sequence="40" parent="academic_1" action="action_attendee_list"/>

        <menuitem id="menu_academic_instructor" name="Instructor" sequence="50" parent="academic_1" action="action_instructor_list"/>

    </data>


</odoo>
